{
    "name": "@threepipe/plugin-blueprintjs",
    "description": "Blueprint.js UI Plugin for ThreePipe",
    "version": "0.5.2",
    "devDependencies": {
        "uiconfig-blueprint": "0.1.0-dev.12",
        "ts-browser-helpers": "file:./../../node_modules/ts-browser-helpers",
        "uiconfig.js": "file:./../../node_modules/uiconfig.js"
    },
    "dependencies": {
        "threepipe": "file:./../../src/"
    },
    "peerDependencies": {
        "threepipe": "^0.1.0"
    },
    "overrides": {
        "ts-browser-helpers": "$ts-browser-helpers",
        "uiconfig.js": "$uiconfig.js"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./dist/": {
            "import": "./dist/",
            "require": "./dist/"
        }
    },
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "source": "src/index.ts",
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "new:pack": "npm run prepare 1>&2 && npm run docs 1>&2 && clean-package && npm pack --silent && clean-package restore",
        "new:publish": "git diff --exit-code --name-only HEAD * && PKG=$(npm run -s new:pack) && npm publish --access public \"$PKG\" && git tag $npm_package_name-$npm_package_version",
        "prepare": "npm run build",
        "build": "rimraf dist && vite build",
        "dev": "NODE_ENV=development vite build --watch",
        "docs": "rimraf docs && npx typedoc --skipErrorChecking"
    },
    "author": "repalash <palash@shaders.app>",
    "license": "Apache-2.0",
    "keywords": [
        "three",
        "three.js",
        "blueprint",
        "threepipe",
        "plugin"
    ],
    "bugs": {
        "url": "https://github.com/repalash/threepipe/issues"
    },
    "homepage": "https://github.com/repalash/threepipe#readme",
    "repository": {
        "type": "git",
        "url": "git://github.com/repalash/threepipe.git",
        "directory": "plugins/blueprintjs"
    },
    "clean-package": {
        "remove": [
            "clean-package",
            "scripts",
            "devDependencies",
            "overrides",
            "//"
        ],
        "replace": {
            "dependencies": {}
        }
    }
}
