{
    "name": "@threepipe/plugin-r3f",
    "description": "R3F wrapper for ThreePipe",
    "version": "0.1.5",
    "devDependencies": {
    },
    "dependencies": {
        "@react-three/fiber": "^9.3.0",
        "react": "^19.1.1",
        "threepipe": "file:./../../src/"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./dist/": {
            "import": "./dist/",
            "require": "./dist/"
        }
    },
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "tsconfig.json",
        "dist",
        "src"
    ],
    "scripts": {
        "new:pack": "npm run prepare 1>&2 && clean-package && npm pack --silent && clean-package restore",
        "new:publish": "git diff --exit-code --name-only HEAD * && PKG=$(npm run -s new:pack) && npm publish --access public \"$PKG\" && git tag $npm_package_name-$npm_package_version",
        "prepare": "npm run build && npm run docs",
        "build": "rimraf dist && vite build",
        "dev": "NODE_ENV=development vite build --watch",
        "docs": "rimraf docs && npx typedoc"
    },
    "author": "repalash <palash@shaders.app>",
    "license": "Apache-2.0",
    "keywords": [
        "three",
        "three.js",
        "threepipe",
        "vite",
        "plugin"
    ],
    "bugs": {
        "url": "https://github.com/repalash/threepipe/issues"
    },
    "homepage": "https://github.com/repalash/threepipe#readme",
    "repository": {
        "type": "git",
        "url": "git://github.com/repalash/threepipe.git",
        "directory": "plugins/r3f"
    },
    "clean-package": {
        "remove": [
            "clean-package",
            "scripts",
            "devDependencies",
            "//",
            "markdown-to-html"
        ],
        "replace": {
            "dependencies": {},
            "peerDependencies": {
                "threepipe": "^0.0.63",
                "@react-three/fiber": "^9.3.0",
                "react": "^19.1.1"
            }
        }
    }
}
